{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0.0",
    "description": "A Chrome Extension plugin that can record a user's screen and send the recorded content to a specific online location (endpoint).",
    "author": "Defacto",
    "icons":{
      "28":"./public/icons/HelpMeOut28.png",
      "32":"./public/icons/HelpMeOut32.png",
      "128":"./public/icons/HelpMeOut32.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./public/icons/HelpMeOut32.png"
    },
    "host_permissions": ["<all_urls>"],
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage",
        "tabCapture"
    ]
}